algoritmo "soma"

var
   N1, N2, S: Inteiro
   M: Real
inicio

      Escreva ("Digite o primeiro número: ")
      Leia (N1)
      Escreva ("Digite o segundo número: ")
      Leia (N2)
      S <- N1 + N2
      Escreval ("A soma é: ", S)
      M <- S / 2
      Escreva ("A média entre ", N1 , " e " , N2, " é: " , M)
fimalgoritmo
